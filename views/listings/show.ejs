<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-7">
      <h1><%= listing.title %></h1>
      <div class="card custom-card">
        <div class="card-img">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top t-img"
            alt="Listing Image"
            style="height: 20rem"
          />
        </div>
        <p>owned by:<%= owner.username %></p>
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text"><%= listing.description %></p>
          <p class="card-text">
            <strong>Location:</strong> <%= listing.location %>
          </p>
          <p class="card-text">
            <strong>Country:</strong> <%= listing.country %>
          </p>
          <p class="card-text">
            <strong>Price:</strong> &#x20b9;<%=
            listing.price.toLocaleString("en-IN") %>
          </p>
          <!-- currUser is a locals variable which is accessible anywhere -->
          <!-- here if current user exist and is equal to owner._id the it 
                will show delete and update buttons-->
          <% if (currUser && listing.owner._id.equals(currUser._id)) { %>

          <div class="btn-group" style="width: 100%">
            <a href="/listings/<%= listing._id %>/edit" style="margin: 10px"
              ><button style="margin: 2rem" class="btn btn-primary">
                Update
              </button></a
            >
            <form
              style="margin: 10px"
              action="/listings/<%= listing._id %>?_method=DELETE"
              method="post"
            >
              <button
                type="submit"
                class="btn btn-primary"
                style="background-color: rgb(15, 14, 14) !important"
              >
                Delete
              </button>
            </form>
          </div>
          <%} %>
        </div>
      </div>
      <% if (currUser) { %>

      <hr />
      <div class="review-form">
        <h2>leave a review</h2>
        <form
          action="/listings/<%= listing._id %>/reviews"
          method="post"
          novalidate
          class="needs-validation"
        >
          <div class="form-group">
            <fieldset class="starability-slot">
              <legend><label>rating:</label></legend>
              <input
                type="radio"
                id="no-rate"
                class="input-no-rate"
                name="rating"
                value="0"
                checked
                aria-label="No rating."
              />
              <input type="radio" id="first-rate1" name="rating" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="rating" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="rating" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="rating" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="rating" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>
          <br />

          <div class="form-group">
            <label for="comment" class="form-label">Comments</label>
            <textarea
              name="comment"
              id="comment"
              class="form-control"
              rows="5"
              required
            ></textarea>
            <div class="invalid-feedback">please enter some comment</div>
          </div>
          <button type="submit" class="btn btn-primary">submit</button>
        </form>
        <%} %> <% if (!reviw.length==0) { %>
        <hr />
        <div class="reviews">
          <h4>All Reviews</h4>
          <div class="row">
            <% for (let review of reviw) {%>

            <div
              class="card col-5 ms-3 mb-3"
              style="border: 1px solid rgba(120, 118, 118, 0.886) !important"
            >
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <h4 class="card-title">@<%= review.author.username %></h4>
                </div>
                <p class="card-text"><%= review.comment %></p>
                <div class="rating" style="transform: scale(0.65)">
                  <p
                    class="starability-result"
                    data-rating="<%= review.rating %>"
                  >
                    Rated: <%= review.rating %> stars
                  </p>
                </div>
                <p class="card-text">
                  <small class="text-muted"
                    >Reviewed on: <%= review.createdAt.toLocaleString('en-US', {
                    dateStyle: 'long', timeStyle: 'short' }) %></small
                  >
                </p>
                <% if (currUser && review.author._id.equals(currUser._id)) { %>

                <form
                  action="/listings/<%= listing._id %>/reviews/<%= review._id %>"
                  method="post"
                >
                  <button class="btn btn-sm btn-dark mb-3">Delete</button>
                </form>
                <% } %>
              </div>
            </div>

            <% } %>
          </div>
        </div>

        <% } %>

        <hr />
        <div>
          <h4>Where You'll Be</h4>
          <div id="map"></div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
        // Initialize the map
        var map = L.map('map').setView([51.505, -0.09], 13); // Default location (London)

        // Load OpenStreetMap tiles
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: 'Â© OpenStreetMap contributors'
        }).addTo(map);

        // Marker for the searched location
        var marker;

        

            // Fetch data from Nominatim API
            var url = `https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(<%= listing.location %>)}`;
            fetch(url)
                .then(response => response.json())
                .then(data => {
                    if (data.length > 0) {
                        var lat = data[0].lat;
                        var lon = data[0].lon;
                        var displayName = data[0].display_name;

                        // Update map view and add marker
                        map.setView([lat, lon], 13);
                        if (marker) {
                            map.removeLayer(marker); // Remove the previous marker
                        }
                        marker = L.marker([lat, lon]).addTo(map);
                        marker.bindPopup(`<b>${displayName}</b>`).openPopup();
                    } else {
                        alert('Location not found.');
                    }
                })
                .catch(error => {
                    console.error('Error fetching location:', error);
                    alert('Error fetching location. Please try again.');
                });
        }
    </script>
