<% layout("/layouts/boilerplate") %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <!-- Listing Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold"><%= listing.title %></h1>
        <span class="badge bg-primary px-3 py-2">By <%= owner.username %></span>
      </div>

      <!-- Main Image Card -->
      <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-5">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing Image" style="height: 400px; object-fit: cover;">
        
        <div class="card-body p-4">
          <div class="row">
            <div class="col-md-8">
              <p class="lead mb-4"><%= listing.description %></p>
              
              <div class="d-flex flex-wrap gap-3 mb-4">
                <div class="feature-badge">
                  <i class="bi bi-geo-alt-fill"></i>
                  <%= listing.location %>
                </div>
                <div class="feature-badge">
                  <i class="bi bi-globe"></i>
                  <%= listing.country %>
                </div>
                <div class="feature-badge">
                  <i class="bi bi-currency-rupee"></i>
                  <%= listing.price.toLocaleString("en-IN") %>
                </div>
              </div>
            </div>
          </div>

          <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
            <div class="d-flex gap-3 mt-4">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary px-4">
                <i class="bi bi-pencil-square me-2"></i>Update
              </a>
              <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                <button type="submit" class="btn btn-dark px-4">
                  <i class="bi bi-trash me-2"></i>Delete
                </button>
              </form>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Reviews Section -->
      <% if (currUser) { %>
        <div class="card border-0 shadow-sm rounded-4 mb-5">
          <div class="card-body p-4">
            <h3 class="card-title mb-4">Leave a Review</h3>
            <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
              <div class="mb-4">
                <fieldset class="starability-slot">
                  <legend class="fw-bold mb-3">Rating:</legend>
                  <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="rating" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="rating" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="rating" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="rating" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="rating" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>

              <div class="mb-4">
                <label for="comment" class="form-label fw-bold">Your Comments</label>
                <textarea name="comment" id="comment" class="form-control" rows="4" required placeholder="Share your experience..."></textarea>
                <div class="invalid-feedback">Please enter some comments</div>
              </div>

              <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-send me-2"></i>Submit Review
              </button>
            </form>
          </div>
        </div>
      <% } %>

      <!-- Reviews List -->
      <% if (!reviw.length==0) { %>
        <div class="reviews-section mb-5">
          <h3 class="mb-4">All Reviews</h3>
          <div class="row g-4">
            <% for (let review of reviw) { %>
              <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm rounded-4">
                  <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                      <h5 class="card-title mb-0">@<%= review.author.username %></h5>
                      <div class="rating" style="transform: scale(0.65)">
                        <p class="starability-result" data-rating="<%= review.rating %>">
                          Rated: <%= review.rating %> stars
                        </p>
                      </div>
                    </div>
                    <p class="card-text"><%= review.comment %></p>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                      <small class="text-muted">
                        <%= review.createdAt.toLocaleString('en-US', { dateStyle: 'long', timeStyle: 'short' }) %>
                      </small>
                      <% if (currUser && review.author._id.equals(currUser._id)) { %>
                        <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>" method="post">
                          <button class="btn btn-sm btn-dark">
                            <i class="bi bi-trash me-1"></i>Delete
                          </button>
                        </form>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      <% } %>

      <!-- Map Section -->
      <div class="card border-0 shadow-sm rounded-4 mb-5">
        <div class="card-body p-4">
          <h3 class="mb-4">Location</h3>
          <div id="map" style="height: 400px; border-radius: 12px;"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.feature-badge {
  background-color: #f8f9fa;
  padding: 0.5rem 1rem;
  border-radius: 50px;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.card {
  transition: transform 0.2s ease;
}

.card:hover {
  transform: translateY(-5px);
}

.btn {
  transition: all 0.3s ease;
}

.btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

#map {
  box-shadow: 0 0 20px rgba(0,0,0,0.1);
}
</style>

