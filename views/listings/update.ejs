<% layout("/layouts/boilerplate") %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-body p-5">
          <h1 class="text-center mb-4 text-primary fw-bold">Update Listing</h1>
          <form
            action="/listings/<%= listing._id %>?_method=PUT"
            method="post"
            novalidate
            class="needs-validation"
            enctype="multipart/form-data"
          >
            <div class="form-group mb-4">
              <label for="title" class="form-label fw-semibold">Title</label>
              <input
                type="text"
                id="title"
                name="title"
                placeholder="Enter title"
                class="form-control form-control-lg bg-light"
                value="<%= listing.title %>"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="form-group mb-4">
              <label for="description" class="form-label fw-semibold">Description</label>
              <textarea
                type="text"
                id="description"
                name="description"
                placeholder="Enter description"
                class="form-control form-control-lg bg-light"
                rows="4"
                required
              ><%= listing.description %></textarea>
              <div class="invalid-feedback">Please enter a short description</div>
            </div>

            <div class="row mb-4">
              <div class="col-md-4">
                <label for="price" class="form-label fw-semibold">Price</label>
                <div class="input-group">
                  <span class="input-group-text">$</span>
                  <input
                    type="number"
                    id="price"
                    name="price"
                    placeholder="Enter price"
                    class="form-control form-control-lg bg-light"
                    value="<%= listing.price %>"
                    required
                  />
                </div>
                <div class="invalid-feedback">Please enter a valid price</div>
              </div>
              <div class="col-md-8">
                <label for="country" class="form-label fw-semibold">Country</label>
                <input
                  type="text"
                  id="country"
                  name="country"
                  placeholder="Enter country"
                  class="form-control form-control-lg bg-light"
                  value="<%= listing.country %>"
                  required
                />
                <div class="invalid-feedback">Please enter a valid country</div>
              </div>
            </div>

            <div class="form-group mb-4">
              <label class="form-label fw-semibold">Current Image</label>
              <div class="rounded overflow-hidden mb-3" style="max-height: 300px;">
                <img src="<%= modifiedImgUrl %>" alt="Current listing image" class="img-fluid w-100 object-fit-cover">
              </div>
            </div>

            <div class="form-group mb-4">
              <label for="image" class="form-label fw-semibold">Update Image</label>
              <input
                type="file"
                id="image"
                name="image"
                class="form-control form-control-lg bg-light"
              />
            </div>

            <div class="form-group mb-4">
              <label for="location" class="form-label fw-semibold">Location</label>
              <input
                type="text"
                id="location"
                name="location"
                placeholder="Enter location"
                class="form-control form-control-lg bg-light"
                value="<%= listing.location %>"
                required
              />
              <div class="invalid-feedback">Please enter a valid location</div>
            </div>

            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary btn-lg fw-bold">
                <i class="fas fa-sync-alt me-2"></i>Update Listing
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
