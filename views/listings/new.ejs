<% layout("/layouts/boilerplate") %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-body p-5">
          <h1 class="text-center mb-4 text-primary fw-bold">Create New Listing</h1>
          <form
            action="/listings"
            method="post"
            novalidate
            class="needs-validation"
            enctype="multipart/form-data"
          >
            <div class="form-group mb-4">
              <label for="title" class="form-label fw-semibold">Title</label>
              <input
                type="text"
                id="title"
                name="title"
                placeholder="Enter an attractive title"
                class="form-control form-control-lg rounded-3"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="form-group mb-4">
              <label for="description" class="form-label fw-semibold">Description</label>
              <textarea
                id="description"
                name="description"
                placeholder="Describe your property in detail"
                class="form-control form-control-lg rounded-3"
                rows="4"
                required
              ></textarea>
              <div class="invalid-feedback">Please provide a description</div>
            </div>

            <div class="row mb-4">
              <div class="col-md-4">
                <div class="form-group">
                  <label for="price" class="form-label fw-semibold">Price</label>
                  <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input
                      id="price"
                      name="price"
                      placeholder="0.00"
                      class="form-control form-control-lg"
                      required
                    />
                  </div>
                  <div class="invalid-feedback">Please enter a valid price</div>
                </div>
              </div>
              <div class="col-md-8">
                <div class="form-group">
                  <label for="country" class="form-label fw-semibold">Country</label>
                  <input
                    type="text"
                    id="country"
                    name="country"
                    placeholder="Enter country"
                    class="form-control form-control-lg rounded-3"
                    required
                  />
                  <div class="invalid-feedback">Please enter a country</div>
                </div>
              </div>
            </div>

            <div class="form-group mb-4">
              <label for="image" class="form-label fw-semibold">Property Images</label>
              <div class="input-group">
                <input
                  type="file"
                  id="image"
                  name="image"
                  class="form-control form-control-lg rounded-3"
                  required
                />
              </div>
            </div>

            <div class="form-group mb-4">
              <label for="location" class="form-label fw-semibold">Location</label>
              <input
                type="text"
                id="location"
                name="location"
                placeholder="Enter precise location"
                class="form-control form-control-lg rounded-3"
                required
              />
              <div class="invalid-feedback">Please enter a valid location</div>
            </div>

            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary btn-lg rounded-3 text-uppercase fw-bold">
                Create Listing
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
